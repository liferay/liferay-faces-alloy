<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	xmlns:util="http://www.liferay.com/xml/ns/liferay-faces-util-extension">

	<name>LiferayFacesAlloy</name>
	<application>
		<system-event-listener>
			<system-event-listener-class>com.liferay.faces.alloy.event.internal.ApplicationConfigConstructedListener</system-event-listener-class>
			<system-event-class>com.liferay.faces.util.event.PostConstructApplicationConfigEvent</system-event-class>
		</system-event-listener>
	</application>
	<factory>
		<factory-extension>
			<util:i18n-factory>com.liferay.faces.alloy.i18n.internal.I18nFactoryAlloyImpl</util:i18n-factory>
			<util:resource-verifier-factory>com.liferay.faces.alloy.application.internal.ResourceVerifierFactoryAlloyImpl</util:resource-verifier-factory>
			<util:scripts-encoder-factory>com.liferay.faces.alloy.render.internal.ScriptsEncoderFactoryAlloyImpl</util:scripts-encoder-factory>
		</factory-extension>
	</factory>

</faces-config>
